<main>

	<h2>Edit your account</h2>

	<div id="edit-form" class="edit">

		<form action="/axis/{{axis._id}}?_method=PUT" class="axis-new" method="POST">
			<div>
				<label for="name">Name:</label>
				<input type="text" name="name" id='name' placeholder={{axis.name}}>
			</div>
			<div>
				<label for="email">Email:</label>
				<input type="text" name="email" id='email' placeholder={{axis.email}}>
			</div>
			<div>
				<label for="boostOffer">Do you offer boosting?</label>
				<input type="checkbox" name="boostOffer" id='boostOffer'>
			</div>
			<div>
				<label for="costPerHour">Cost per hour for boosting: $</label>
				<input type="number" name="costPerHour" id='costPerHour' placeholder={{axis.costPerHour}}>
			</div>
			<input type="submit" class='submit-button' value="Submit">
		</form>

	</div>
	<a href="/">Return to Home Page</a>
</main>