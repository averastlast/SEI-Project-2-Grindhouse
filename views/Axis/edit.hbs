
<main>

	<h2>Edit your account</h2>

	<a href="/">Return to Home Page</a>

	<div id="edit-form" class="donut-container-show">


		<form action="/{{axis._id}}?_method=PUT" method="POST">
			<input type="text" name="name" placeholder={{axis.name}}>
			<input type="text" name="email" placeholder={{axis.email}}>
			<input type="boolean" name="boostOffer" placeholder={{axis.boostOffer}}>
