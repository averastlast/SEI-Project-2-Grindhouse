<main>

	<h2>Edit your alt account</h2>

	<a href="/">Return to Home Page</a>

	<div id="edit-form" class="alt-container">

		<form action="/{{axis._id}}?_method=PUT" method="POST">
			<input type="text" name="alias" placeholder={{alt.name}}>
			<input type="text" name="platform" placeholder={{alt.email}}>
            <input type="text" name="youtubeLink" placeholder={{alt.youtubeLink}}>
			<input type="checkbox" name="forSale" placeholder={{alt.forSale}}>
			<input type="number" name="price" placeholder={{alt.price}}>
			<input type="submit" value="Submit">
		</form>

	</div>
</main>