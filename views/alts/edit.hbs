<main>

	<h2>Edit your alt account</h2>

	<div id="edit-form" class="alt-container">

		<form action="/{{axis._id}}?_method=PUT" method="POST" class="alt-new">
			<div>
				<label for="alias">Alias: </label>
				<input type="text" name="alias" id='alias' placeholder={{alt.alias}}>
			</div>
			<div>
				<label for="game">Game: </label>
				<input type="text" name="game" id='game' placeholder={{alt.game}}>
			</div>
			<div>
				<label for="platform">Platform: </label>
				<input type="text" name="platform" id='platform' placeholder={{alt.platform}}>
			</div>
			<div>
				<label for="youtubeLink">Youtube Link: </label>
				<input type="text" name="youtubeLink" id='youtubeLink' placeholder={{alt.youtubeLink}}>
			</div>
			<div>
				<label for="forSale">Account for Sale? </label>
				<input type="checkbox" name="forSale" id='forSale'>
			</div>
			<div>
				<label for="price">Price: $</label>
				<input type="number" name="price" id='price' placeholder={{alt.price}}>
			</div>

			<input type="submit" class='submit-button' value="Submit" onclick="add()">
		</form>

	</div>
	<a href="/">Return to Home Page</a>
</main>