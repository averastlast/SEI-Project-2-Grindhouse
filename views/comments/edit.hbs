<main>

	<h2>Edit your comment</h2>

	<div id="edit-form" class="edit">

		<form action="/comments/{{comments._id}}?_method=PUT" class="comment-new" method="POST">
			<div>
				<label for="alias">Alias:</label>
				<input type="text" name="alias" id='alias' placeholder={{comments.alias}}>
			</div>
			<div>
				<label for="game">Game:</label>
				<input type="text" name="game" id='game' placeholder={{comments.game}}>
			</div>
			<div>
				<label for="feedback">Feedback:</label>
			</div>
			<textarea cols="25" rows="8" name="feedback" id='feedback' placeholder="{{comments.feedback}}"></textarea> 
			<input type="submit" class='submit-button' value="Submit">
		</form>

	</div>
	<footer>
	<a href="/">Return to Home Page</a>
	<a href="/comments">Back to Comments</a>
	</footer>
</main>

